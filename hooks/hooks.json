{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-vers-auth.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(vers:*)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ensure-vers-env.sh"
          }
        ]
      }
    ]
  }
}
